<mujoco model="reactive_bot">
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <worldbody>
        <light directional="true" diffuse=".8 .8 .8" specular=".2 .2 .2" pos="0 0 5" dir="0 0 -1"/>
        <geom name="ground" type="plane" size="10 10 0.1" rgba=".9 .9 .9 1"/>

        <body name="chassis" pos="0 0 0.1">
            <freejoint/>
            <geom name="chassis_geom" type="box" size=".15 .1 .05" rgba="0 .7 .7 1" mass="2.0"/>
            
            <body name="left_wheel" pos="0 0.12 -0.05" quat="0.707 0.707 0 0">
                <joint name="left_joint" type="hinge" axis="0 0 1"/>
                <geom type="cylinder" size=".05 .02" rgba=".1 .1 .1 1"/>
            </body>

            <body name="right_wheel" pos="0 -0.12 -0.05" quat="0.707 0.707 0 0">
                <joint name="right_joint" type="hinge" axis="0 0 1"/>
                <geom type="cylinder" size=".05 .02" rgba=".1 .1 .1 1"/>
            </body>

            <body name="caster" pos="0.1 0 -0.05">
                <geom type="sphere" size=".049" rgba=".1 .1 .1 1" friction="0.01"/>
            </body>

            <site name="sensor_center" pos="0.15 0 0" quat="0.707 0 0.707 0"/>
            <site name="sensor_left" pos="0.15 0.05 0" quat="0.653 0.271 0.653 0.271"/>
            <site name="sensor_right" pos="0.15 -0.05 0" quat="0.653 -0.271 0.653 -0.271"/>
        </body>

        <geom name="box1" type="box" size=".2 .2 .2" pos="1 0.2 0.2" rgba=".8 .2 .2 1"/>
        <geom name="box2" type="box" size=".3 .3 .3" pos="2 -0.5 0.3" rgba=".2 .8 .2 1"/>
    </worldbody>

    <sensor>
        <rangefinder name="rf_center" site="sensor_center"/>
        <rangefinder name="rf_left" site="sensor_left"/>
        <rangefinder name="rf_right" site="sensor_right"/>
    </sensor>

    <actuator>
        <velocity name="left_motor" joint="left_joint" kv="10"/>
        <velocity name="right_motor" joint="right_joint" kv="10"/>
    </actuator>
</mujoco>
